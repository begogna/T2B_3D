                <!-- Panel gauche -->

                <div class="row panel">
                    <div class="col-2">
                        <div class="card">
                            <form action="/createPost" method="post" id="form_create">
                                <div class="card-body">
                                    <div class="form-group">
                                        <p>Texte</p>
                                        <input name="text3D" id="text3D" class="form-control" placeholder="Texte">
                                    </div>

                                    <div class="form-group">
                                        <p>Font</p>
                                        <select id="fontSel" name="fontSel" class="form-control">
                                            <option value=0>Helvetiker</option>
                                            <option value=1>Optimer</option>
                                            <option value=2>Gentilis</option>
                                            <option value=3>Droid sans</option>
                                            <option value=4>Droid serif</option>    

                        </select>
                                    </div>
                                    <div class="form-group">
                                        <p>Taille</p>
                                        <select  name="taille" class="form-control">
                            <option value="10">10 cm</option>
                            <option value="12">12 cm</option>
                            <option value="14">14 cm</option>
                        </select>
                                    </div>
                                    <div class="form-group text-center">
