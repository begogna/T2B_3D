                                    <select class="form-control">
                            <option>Sélectionner matériel</option>
                            <option>Argent</option>
                            <option>Or</option>
                        </select>
                                </div>
                                <div class="form-group">
                                    <p>Sélectionner finition</p>
                                    <select class="form-control">
