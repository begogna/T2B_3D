<!DOCTYPE html>
<html lang="en">

<head>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="stylesheets/style.css" rel="stylesheet">

    <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M"-->
    <!--crossorigin="anonymous">-->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
            integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
            crossorigin="anonymous"></script>

    <script src="javascripts/bootstrap.min.js"></script>
</head>

<body>

<!-- NavBar -->

<div class="entete">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="col">
            <a class="navbar-brand" href="#">T2B</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>

        <div class="col-6">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">CREER</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/catalogue">CATALOGUE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="/aPropos">A PROPOS</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col text-right">
            <button type="submit" class="btn btn-default" data-toggle="modal" data-target="#connexionModal">Connexion
            </button>
            <button type="submit" class="btn btn-default" data-toggle="modal" data-target="#inscriptionModal">
                Inscription
            </button>
        </div>
    </nav>
</div>

<div class="container-fluid">

    <!-- Panel gauche -->

    <div class="row panel">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <p>Texte</p>
                        <input class="form-control" placeholder="Texte">
                    </div>
                    <div class="form-group">
                        <p>Font</p>
                        <select class="form-control">
                            <option>En mettre plusieurs</option>
                            <option>1</option>
                            <option>2</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <p>Taille</p>
                        <select class="form-control">
                            <option>10 cm</option>
                            <option>12 cm</option>
                            <option>14 cm</option>
                        </select>
                    </div>
                    <div class="form-group text-center">
                        <button type="button" class="btn btn-trash"><span class="glyphicon glyphicon-share"></span>
                        </button>
                        <button type="button" class="btn btn-trash"><span class="glyphicon glyphicon-edit"></span>
                        </button>
                        <button type="button" class="btn btn-trash"><span class="glyphicon glyphicon-edit"></span>
                        </button>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-default">Créer</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Contenu -->

        <div id="contenu" class="col-8">
            <% if (errCo) { %>
            <div class="alert alert-danger" role="alert">Identifiants incorrects</div>
            <% } %>
            <label>CONTENU</label>

        </div>

        <!-- Panel droit -->

        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <p>Sélectionner matériel</p>
                        <select class="form-control">
                            <option>Sélectionner matériel</option>
                            <option>1</option>
                            <option>2</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <p>Sélectionner finition</p>
                        <select class="form-control">
                            <option>Sélectionner finition</option>
                            <option>1</option>
                            <option>2</option>
                        </select>
                    </div>
                    <label>Prix</label>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-default">Ajouter au panier</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de connexion -->

    <div class="modal fade" id="connexionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Connexion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col align-self-start"></div>
                    <div class="col align-self-center">
                        <form action="/" method="post">
                            <a id="to-register-trigger" style="display:inline-block;" href="#">Pas encore inscrit ?</a>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Adresse e-mail</label>
                                <input type="email" name="mail" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" placeholder="Mail">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Mot de passe</label>
                                <input type="password" name="pass" class="form-control" id="exampleInputPassword1"
                                       placeholder="Mot de passe">
                                <a id="reset-popup-trigger" href="#">mot de passe oublié ?</a>
                            </div>
                            <button type="submit" class="btn btn-blue">Se connecter</button>
                        </form>
                    </div>
                    <div class="col align-self-end"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal d'inscription -->

    <div class="modal fade" id="inscriptionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Inscription</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col align-self-start"></div>
                    <div class="col align-self-center">
                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Adresse e-mail</label>
                                <input type="email" name="mail" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" placeholder="Mail">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Mot de passe</label>
                                <input type="password" name="pass" class="form-control" id="exampleInputPassword1"
                                       placeholder="Mot de passe">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" required>
                                    "Coche la case, soit sympa..."
                                    <a target="_blank" href="http://www.creabybego.com/">Conditions d'utilisation</a>
                                </label>
                            </div>
                            <button type="submit" class="btn btn-blue">S'inscrire</button>
                        </form>
                    </div>
                    <div class="col align-self-end"></div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>