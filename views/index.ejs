<!DOCTYPE html>
<html lang="en">

<% include include/head %>

    <body>

        <% include include/navpopup %>

            <div class="container-fluid">

                <!-- Panel gauche -->

                <div class="row panel">
                    <div class="col-2">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <p>Texte</p>
                                    <input class="form-control" placeholder="Texte">
                                </div>
                                <div class="form-group">
                                    <p>Font</p>
                                    <select class="form-control">
                        <option>En mettre plusieurs</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                                </div>
                                <div class="form-group">
                                    <p>Taille</p>
                                    <select class="form-control">
                        <option>10 cm</option>
                        <option>12 cm</option>
                        <option>14 cm</option>
                    </select>
                                </div>
                                <div class="form-group text-center">
                                    <button type="button" class="btn btn-trash"><span class="glyphicon glyphicon-share"></span></button>
                                    <button type="button" class="btn btn-trash"><span class="glyphicon glyphicon-edit"></span></button>
                                    <button type="button" class="btn btn-trash"><span class="glyphicon glyphicon-edit"></span></button>
                                </div>
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-default">Créer</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contenu -->

                    <div class="container col-8" id="contenu">
                        <% if (errCo) { %>
                        <div class="alert alert-danger" role="alert">Identifiants incorrects</div>
                        <% } %>

                        <% if (inscr) { %>
                        <div class="alert alert-success" role="alert">Inscription réussie !</div>
                        <% } %>

                        <img src="public/images/bague.jpg">
                    </div>

                    <!-- Panel droit -->

                    <div class="col-2">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <p>Sélectionner matériel</p>
                                    <select class="form-control">
                        <option>Sélectionner matériel</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                                </div>
                                <div class="form-group">
                                    <p>Sélectionner finition</p>
                                    <select class="form-control">
                        <option>Sélectionner finition</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                                </div>
                                <label>Prix</label>
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-default">Ajouter au panier</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </body>

</html>